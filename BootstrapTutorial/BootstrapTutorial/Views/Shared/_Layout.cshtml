@{
    const string applicationName = "Bootstrap 4 Tutorial";
}

<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Chrome, Firefox OS and Opera -->
    <meta name="theme-color" content="#5bc0de">
    <!-- Windows Phone -->
    <meta name="msapplication-navbutton-color" content="#5bc0de">
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-status-bar-style" content="#5bc0de">
    <title>@ViewBag.Title - @applicationName</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <link href="~/favicon.ico" rel="icon" type="image/x-icon">
    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/site.css" rel="stylesheet" type="text/css" />
</head>
<body id="home" data-spy="scroll" data-target=".navbar" data-offset="100">
    <!-- navbar -->
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-primary fixed-top">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container">

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#home">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        @* ReSharper disable once Html.IdNotResolved *@
                        <a class="nav-link" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                        @* ReSharper disable once Html.IdNotResolved *@
                        <a class="nav-link" href="#speakers">Speakers</a>
                    </li>
                    <li class="nav-item">
                        @* ReSharper disable once Html.IdNotResolved *@
                        <a class="nav-link" href="#schedule">Schedule</a>
                    </li>
                </ul>
            </div>
            <a class="navbar-brand mr-0" href="https://www.linkedin.com/in/gironmolina">Huans Sample</a>
        </div>
    </nav>
    <!-- /navbar -->
    @RenderBody()
    <!-- footer -->
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-7">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link pl-0" href="#">Community</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Tracks</a>
                    </li>
                    <li class="nav-item">
                        <!-- Split button -->
                        <div class="btn-group dropup">
                            <button type="button" class="btn btn-secondary">Other Confs</button>
                            <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">CSS Conf</a>
                                <a class="dropdown-item" href="#">Python Conf</a>
                                <a class="dropdown-item" href="#">Java Conf</a>
                                <a class="dropdown-item" href="#">Swift Conf</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-md-5 text-md-right align-self-center">
                <small>&copy; @DateTime.Now.Year @applicationName, All Rights Reserved.</small>
            </div>
        </div>
    </div>
    <!-- /footer -->
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/tether/tether.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>

</html>